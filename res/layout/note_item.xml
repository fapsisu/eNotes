<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal"
    android:id="@+id/llNoteItem" >

    <TextView
        android:id="@+id/tvNoteTitleItem"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_weight="0.62"
        android:ellipsize="end"
        android:ems="3"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:paddingLeft="4dp"
        android:singleLine="true"
        android:textSize="@dimen/base_title" />

    <LinearLayout
        android:id="@+id/subllNI"
        android:layout_width="0dp"
        android:layout_weight="0.38"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

		<ImageView
        	android:id="@+id/ivNoteRecyclerIcoItem"
         	android:layout_width="0dp"
         	android:layout_weight="0.17"
        	android:layout_height="wrap_content"
        	android:padding="1dp"
        	android:layout_marginLeft="1dp"
        	android:layout_marginRight="1dp"
         	android:scaleType="fitCenter" />		
		
		<ImageView
        	android:id="@+id/ivNoteEncryptIcoItem"
         	android:layout_width="0dp"
         	android:layout_weight="0.17"
        	android:layout_height="wrap_content"
        	android:padding="1dp"
        	android:layout_marginLeft="1dp"
        	android:layout_marginRight="1dp"
         	android:scaleType="fitCenter" />
            
		<TextView
		    android:id="@+id/tvNoteDateTimeItem"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="0.66"
		    android:gravity="center_vertical|center_horizontal"
		    android:textSize="@dimen/note_item_date" />

	</LinearLayout>

</LinearLayout>